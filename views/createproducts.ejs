<%- include('./partials/headerAdmin') %>

<% if (success.length> 0) { %>
    <div id="flashMessage" class="flash-message">
        <span class="inline-block text-sm font-semibold">
            <%= success %>
        </span>
    </div>
    <% } %>

        <div class="min-h-screen flex flex-col bg-gray-100">
            <div class="container mx-auto px-6 py-12 flex flex-col md:flex-row">
                <div class="w-full md:w-1/4 bg-white p-6 shadow-lg rounded-lg mb-6 md:mb-0">
                    <h3 class="text-lg font-semibold mb-4">Dashboard</h3>
                    <nav>
                        <a class="block text-blue-500 hover:text-blue-700 mb-3 text-lg font-medium" href="#">All
                            Products</a>
                        <a class="block text-blue-500 hover:text-blue-700 text-lg font-medium" href="#">Create New
                            Product</a>
                    </nav>
                </div>

                <main class="w-full md:w-3/4 bg-white p-8 shadow-lg rounded-lg">
                    <h2 class="text-2xl font-bold mb-6">Create New Product</h2>
                    <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                        <div class="mb-6">
                            <h3 class="text-lg font-semibold mb-3">Product Details</h3>
                            <div class="mb-4">
                                <label class="block mb-2 text-gray-700">Product Image</label>
                                <input name="image" type="file" class="py-2 px-4 border rounded-lg w-full bg-gray-50">
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <input name="name" type="text" placeholder="Product Name"
                                    class="border px-4 py-2 rounded-lg w-full bg-gray-50">
                                <input name="price" type="text" placeholder="Product Price"
                                    class="border px-4 py-2 rounded-lg w-full bg-gray-50">
                                <input name="discount" type="text" placeholder="Discount Price"
                                    class="border px-4 py-2 rounded-lg w-full bg-gray-50">
                            </div>
                        </div>

                        <div class="mb-6">
                            <h3 class="text-lg font-semibold mb-3">Panel Details</h3>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <input name="bgcolor" type="text" placeholder="Background Color"
                                    class="border px-4 py-2 rounded-lg w-full bg-gray-50">
                                <input name="panelcolor" type="text" placeholder="Panel Color"
                                    class="border px-4 py-2 rounded-lg w-full bg-gray-50">
                                <input name="textcolor" type="text" placeholder="Text Color"
                                    class="border px-4 py-2 rounded-lg w-full bg-gray-50">
                            </div>
                        </div>
                        <input
                            class="px-6 py-3 bg-blue-500 text-white rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50"
                            type="submit" value="Create New Product">
                    </form>
                </main>
            </div>
        </div>
        <style>
            .flash-message {
                display: none;
                opacity: 1;
                position: fixed;
                top: 5%;
                left: 50%;
                transform: translateX(-50%);
                padding: 10px;
                border-radius: 8px;
                background-color: #3182ce;
                color: white;
                z-index: 1000;
                transition: opacity 1s ease-out;
            }
        </style>


        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var flashMessage = document.getElementById("flashMessage");
                if (flashMessage) {
                    flashMessage.style.display = "block";
                    setTimeout(function () {
                        flashMessage.style.opacity = 0;
                        setTimeout(function () {
                            flashMessage.style.display = "none";
                        }, 1000);
                    }, 4000);
                }
            });
        </script>

        <%- include('./partials/footer') %>